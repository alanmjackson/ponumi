<NavBar>:
	background_color: 0,0,0,1
	osc_indicator: osc_indicator

    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            with_previous: False
            app_icon: 'images/logo.png'

        ActionToggleButton:
            group: 'screens'
        	icon: 'images/poem-glitch-inv.png'
        	background_down: 'images/poem-glitch.png'
        	on_release: root.entry_pressed()

        ActionToggleButton:
            group: 'screens'
        	icon: 'images/rhythm-glitch-inv.png'
        	background_down: 'images/rhythm-glitch.png'
        	on_release: root.rhythm_pressed()

        ActionToggleButton:
            group: 'screens'
        	icon: 'images/manual-glitch-inv.png'
        	background_down: 'images/manual-glitch.png'
        	on_release: root.keyboard_pressed()

        ActionToggleButton:
            group: 'screens'
        	icon: 'images/laser-glitch-inv.png'
        	background_down: 'images/laser-glitch.png'
        	on_release: root.manual_pressed()

        ActionToggleButton:
            group: 'screens'
        	icon: 'images/vcs-glitch-inv.png'
        	background_down: 'images/vcs-glitch.png'
        	on_release: root.vcs_pressed()

        ActionToggleButton:
            group: 'screens'
            icon: 'images/config-glitch-inv.png'
            background_down: 'images/config-glitch.png'
            on_release: root.config_pressed()

        ActionSeparator:

        ActionButton:
        	id: osc_indicator
            text: 'Btn0'
            icon: 'images/audio-volume-none-glitch-inv.png'
        	padding_x: [200, 0]

<SyllableKeyboard>:
    cols: 17

<ConfigScreen>:
	osc_ip_address: osc_ip_address
	osc_port: osc_port
	auto_generate_rhythm: auto_generate_rhythm

	orientation: 'vertical'

	GridLayout:
		cols: 2
		padding: '40dp'
		
		Label:
			text: 'ip address'
		TextInput:
			id: osc_ip_address
			text: app.osc_ip_address
			multiline: False

		Label:
			text: 'port'
		TextInput:
			id: osc_port
			text: app.osc_port
			multiline: False

		Label:
			text: 'auto generate rhythm'
		ToggleButton:
			id: auto_generate_rhythm
			text: 'enable'



	BoxLayout:
		size_hint_y: 0.5
		orientation: 'horizontal'
		padding: '50dp', '0'
		spacing: '100dp'
		Button:
			text: 'default settings'
			size_hint_y: 0.2
			on_release: app.load_default_config()
		Button:
			text: 'save'
			size_hint_y: 0.2
			on_release: self.parent.parent.save_pressed()		

