<NavBar>:
	background_color: 0,0,0,1
	osc_indicator: osc_indicator

    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            with_previous: False
            app_icon: 'images/logo.png'

        ActionButton:
            background_normal: 'images/config-inv2.png'
            background_down: 'images/config.png'
            on_release: root.config_pressed()


        ActionButton:
        	id: osc_indicator
            text: 'Btn0'
            icon: 'images/audio-volume-none-inv2.png'

<SyllableKeyboard>:
    cols: 17

<ConfigScreen>:
	osc_ip_address: osc_ip_address
	osc_port: osc_port
	osc_data_address: osc_data_address
	osc_go_address: osc_go_address
	osc_syllable_address: osc_syllable_address
	osc_syllable_gate_address: osc_syllable_gate_address


	orientation: 'vertical'

	GridLayout:
		cols: 2
		padding: '40dp'
		
		Label:
			text: 'ip address'
		TextInput:
			id: osc_ip_address
			text: app.osc_ip_address
			multiline: False

		Label:
			text: 'port'
		TextInput:
			id: osc_port
			text: app.osc_port
			multiline: False

		Label:
			text: 'osc data address'
		TextInput:
			id: osc_data_address
			text: app.osc_data_address
			multiline: False

		Label:
			text: 'osc go address'
		TextInput:
			id: osc_go_address
			text: app.osc_go_address
			multiline: False

		Label:
			text: 'osc syllable address'
		TextInput:
			id: osc_syllable_address
			text: app.osc_syllable_address
			multiline: False
		Label:
			text: 'osc syllable gate address'
		TextInput:
			id: osc_syllable_gate_address
			text: app.osc_syllable_gate_address
			multiline: False
		Label:
		Label:
		Label:
		Button: 
			size_hint_y: 0.2
			text: 'reset'
			on_release: app.load_default_config()


	BoxLayout:
		size_hint_y: 0.5
		orientation: 'horizontal'
		padding: '50dp', '0'
		spacing: '100dp'
		Button:
			text: 'cancel'
			size_hint_y: 0.2
			on_release: self.parent.parent.cancel_pressed()
		Button:
			text: 'save'
			size_hint_y: 0.2
			on_release: self.parent.parent.ok_pressed()		